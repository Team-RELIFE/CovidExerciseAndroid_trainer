<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="#54BFEF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <ImageButton
               android:id="@+id/menuIcon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_stat_menu"
               android:background="#00ff0000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확 찐자 운동관리"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"/>

        </androidx.appcompat.widget.Toolbar>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/video_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/videocall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/video_image"
            android:text="PT"
            android:textColor="#54BFEF"
            android:textSize="36dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/main2_Text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/video_image"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:text="하러가기"
            android:textColor="#54BFEF"
            android:textSize="30dp"/>

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/main2_Text1"
            android:layout_toRightOf="@+id/video_image"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/phonecall"
            android:background="#00ff0000"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/main2_Text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더 많은 수강생들을 만나고 싶다면?"
            android:textColor="#54BFEF"
            android:textSize="15dp"
            android:layout_marginTop="80dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/video_image"/>

        <Button
            android:id="@+id/pt_list_Btn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@+id/main2_Text2"
            android:layout_marginTop="15dp"
            android:layout_centerInParent="true"
            android:backgroundTint="#54BFEF"
            android:textColor="@color/white"
            android:text="홍보하러 가기"
            android:textStyle="bold"
            android:textSize="20dp"/>


    </RelativeLayout>

    <include layout="@layout/drawer"/>



</androidx.drawerlayout.widget.DrawerLayout>