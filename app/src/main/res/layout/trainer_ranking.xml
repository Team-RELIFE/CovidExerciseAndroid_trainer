<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        tools:ignore="MissingConstraints" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rankingText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:text="1등"
                android:textStyle="bold"
                android:textSize="33dp"
                tools:ignore="MissingConstraints" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/tr_Img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintStart_toEndOf="@+id/rankingText"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/co1"
                android:layout_width="270dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toEndOf="@+id/tr_Img">

                <TextView
                    android:id="@+id/tr_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@+id/co1"
                    app:layout_constraintBottom_toBottomOf="@+id/co1"
                    app:layout_constraintRight_toRightOf="@+id/co1"
                    app:layout_constraintLeft_toLeftOf="@+id/co1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>