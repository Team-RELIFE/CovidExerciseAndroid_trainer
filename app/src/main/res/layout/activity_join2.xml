<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".JoinActivity2">

    <TextView
        android:id="@+id/joinText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JOIN"
        android:textColor="#54BFEF"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:textSize="40dp"/>

    <TextView
        android:id="@+id/joinText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. 사진 추가"
        android:textStyle="bold"
        android:textColor="#54BFEF"
        android:textSize="17dp"
        android:layout_below="@+id/joinText1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"/>

    <ImageButton
        android:id="@+id/galleryBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/gallery"
        android:layout_below="@+id/joinText2"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:background="#00ff0000"/>


    <ImageButton
        android:id="@+id/JoinOkBtn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/signin"
        android:scaleType="fitCenter"
        android:layout_centerInParent="true"
        android:background="#00ff0000"/>

</RelativeLayout>